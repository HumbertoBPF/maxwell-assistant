<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Maxwell" parent="Theme.Material3.Light.NoActionBar">
        <!-- Base colors -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <item name="colorPrimaryContainer">@color/md_theme_light_primaryContainer</item>
        <item name="colorOnPrimaryContainer">@color/md_theme_light_onPrimaryContainer</item>
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <item name="colorSecondaryContainer">@color/md_theme_light_secondaryContainer</item>
        <item name="colorOnSecondaryContainer">@color/md_theme_light_onSecondaryContainer</item>
        <item name="colorTertiary">@color/md_theme_light_tertiary</item>
        <item name="colorOnTertiary">@color/md_theme_light_onTertiary</item>
        <item name="colorTertiaryContainer">@color/md_theme_light_tertiaryContainer</item>
        <item name="colorOnTertiaryContainer">@color/md_theme_light_onTertiaryContainer</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorErrorContainer">@color/md_theme_light_errorContainer</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        <item name="colorOnErrorContainer">@color/md_theme_light_onErrorContainer</item>
        <item name="android:colorBackground">@color/md_theme_light_background</item>
        <item name="colorOnBackground">@color/md_theme_light_onBackground</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorSurfaceVariant">@color/md_theme_light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/md_theme_light_onSurfaceVariant</item>
        <item name="colorOutline">@color/md_theme_light_outline</item>
        <item name="colorOnSurfaceInverse">@color/md_theme_light_inverseOnSurface</item>
        <item name="colorSurfaceInverse">@color/md_theme_light_inverseSurface</item>
        <item name="colorPrimaryInverse">@color/md_theme_light_inversePrimary</item>

        <item name="colorSaveColor">#006e20</item>
        <item name="colorOnSaveColor">#ffffff</item>
        <item name="colorSaveColorContainer">#6eff7b</item>
        <item name="colorOnSaveColorContainer">#002105</item>
        <item name="harmonizeSaveColor">false</item>

        <item name="colorTaskColor">#b02c32</item>
        <item name="colorOnTaskColor">#ffffff</item>
        <item name="colorTaskColorContainer">#ffdad8</item>
        <item name="colorOnTaskColorContainer">#410006</item>
        <item name="harmonizeTaskColor">false</item>

        <item name="colorStudyColor">#006590</item>
        <item name="colorOnStudyColor">#ffffff</item>
        <item name="colorStudyColorContainer">#c8e6ff</item>
        <item name="colorOnStudyColorContainer">#001e2e</item>
        <item name="harmonizeStudyColor">false</item>

        <item name="colorFinanceColor">#006d33</item>
        <item name="colorOnFinanceColor">#ffffff</item>
        <item name="colorFinanceColorContainer">#63ff94</item>
        <item name="colorOnFinanceColorContainer">#00210b</item>
        <item name="harmonizeFinanceColor">false</item>
        <!-- Customize your theme here. -->
        <!-- Font style -->
        <item name="android:textViewStyle">@style/RobotoTextViewStyle</item>
        <item name="toolbarStyle">@style/Widget.Maxwell.Toolbar</item>
        <item name="floatingActionButtonStyle">@style/Widget.Maxwell.FloatingActionButton</item>
    </style>

    <style name="Theme.Maxwell.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background to black -->
        <item name="windowSplashScreenBackground">@color/md_theme_light_primary</item>
        <!-- Use windowSplashScreenAnimatedIcon to add a drawable or an animated drawable. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <!-- Set the theme of the Activity that follows your splash screen. -->
        <item name="postSplashScreenTheme">@style/Theme.Maxwell</item>
    </style>

    <style name="Widget.Maxwell.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">@color/white</item>
        <item name="logo">@drawable/ic_logo</item>
    </style>

    <style name="Widget.Maxwell.TasksAppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorTaskColor</item>
    </style>

    <style name="Widget.Maxwell.StudiesAppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorStudyColor</item>
    </style>

    <style name="Widget.Maxwell.FinancesAppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorFinanceColor</item>
    </style>

    <style name="Widget.Maxwell.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="tint">@color/white</item>
    </style>

    <style name="RobotoTextViewStyle" parent="android:Widget.TextView">
        <item name="android:fontFamily">@font/roboto</item>
    </style>
</resources>